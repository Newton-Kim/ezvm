all: ezvm ezas

ezvm ezas: libezvm libezutil

ezvm ezas libezvm:
	$(MAKE) -C src/$@

clean:
	$(MAKE) -C src/ezvm $@
	$(MAKE) -C src/libezvm $@
	$(MAKE) -C src/libezutil $@
	$(MAKE) -C src/ezas $@

distclean:
	$(MAKE) -C src/ezvm $@
	$(MAKE) -C src/libezvm $@
	$(MAKE) -C src/libezutil $@
	$(MAKE) -C src/ezas $@
	rm -f Makefile
