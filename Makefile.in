all: ezvm ezas

ezvm ezas: libezvm

ezvm ezas libezvm:
	$(MAKE) -C src/$@

local install:
	$(MAKE) -C src/ezvm $@
	$(MAKE) -C src/libezvm $@
	$(MAKE) -C src/ezas $@

clean:
	$(MAKE) -C src/ezvm $@
	$(MAKE) -C src/libezvm $@
	$(MAKE) -C src/ezas $@
	rm -rf bin lib

distclean:
	$(MAKE) -C src/ezvm $@
	$(MAKE) -C src/libezvm $@
	$(MAKE) -C src/ezas $@
	rm -rf bin lib
	rm -f Makefile 

test:
	bin/ezas share/ezvm/hello.ezas -l stderr
	bin/ezas share/ezvm/hello2.ezas -l stderr
